<html lang="en">
<head>
  <% include partials/_headers %>
</head>
<body>
  <h>TinyApp:  <%= shortUrls %></h>
  <ul>
    <li>
      <form method="POST" action="/urls/<%= shortUrls %>/?_method=PUT" >
        <label for="longURL"> <%= fullUrl.url %> </label>
        <input id="longURL" type="text" name="longURL" placeholder="<%= fullUrl.url %>">
        <button name="button">UPDATE</button>
        <p> VIEWS: <%= fullUrl.views %> </p>
        <p> UNIQUE VIEWS: <%=fullUrl.uniqueViews%> </p>
      </form>
    </li>
  </ul>
</body>
</html>